OPENAI_API_KEY=your_openai_key
ELEVENLABS_API_KEY=your_elevenlabs_key
HEDRA_API_KEY=your_hedra_key
BOT_TOKEN=your_bot_token
CHAT_ID=your_chat_id

# Railway specific (para simular)
TZ=America/Mexico_City
PORT=3000

